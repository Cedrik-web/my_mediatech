{% extends 'base.html.twig' %}

{% block title %}New Album{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/stylesAlbum.css">
    <link rel="stylesheet" href="/css/stylesMedias.css">
{% endblock %}

{% block body %}
<header>
    <div class="logo">
        <img class="lG" src="/images/logo_reduit.png" alt="logo my média tech">
        <div>
            <h1 id="title">My MediaTech</h1>
            <p class="accroche">Votre médiathèque privée partout et à partager avec vos amis.</p>
        </div>
    </div>
    <div class="navbar">
        <div>
            <p class="accroche">Votre médiathèque privée partout et à partager avec vos amis.</p>
        </div>
        <div class="menu">
            <a class="passive" href="{{ path('app_home') }}" >Home</a>
            <a class="active" href="{{ path('app_media_index') }}">Mes Médias</a>
            <a class="passive" href="{{ path('app_network_index') }}">Mon Réseaux</a>
            <a class="passive" href="#">Contact</a>
        </div>
    </div>
    <div class="connexion">

        {% if app.user %}
        <div class="menu-connexion">
            <div class="line-connexion">
                <div class="cercle"><img src="/images/person.svg" alt="customer"></div>
                <a class="passive" href="{{ path('app_logout') }}">{{ app.user.FirstName }}</a>
            </div>
        </div>    
        {% else %}
        <div class="menu-connexion">
            <div class="line-connexion">
                <div class="cercle"><img src="/images/person.svg" alt="customer"></div>
                <a class="passive" href="{{ path('app_login') }}">Connexion</a>
            </div>
        </div>
        {% endif %}
        
    </div>
</header>

<main>
    <div id="boxForm">
        
        <div id="cadreTitleLogin">
            <img id="logoReduit" src="/images/logo_reduit.png" alt="logo">
            <h1 class="titleFormLogin">Création d'un nouvel album</h1>
        </div>

        {{ form_start(form) }}
            <div id="box">
                <div class="boxLogin little">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            
                <div class="boxLogin litte">
                    {{ form_label(form.active_comment) }}
                    {{ form_widget(form.active_comment) }}
                </div>
            
                <div class="boxLogin medium">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    <a href="{{ path('app_category_new') }}"> + Ajouter une catégorie</a>
                </div>
        
                <div class="boxLogin little">
                    {{ form_label(form.forWhy) }}
                    {{ form_widget(form.forWhy) }}
                </div>
            
                <div class="boxLogin medium">
                    {{ form_label(form.imageCouv) }}
                    {{ form_widget(form.imageCouv) }}
                </div>
            
                <div class="boxLogin little">
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                    <button class="btn">{{ button_label|default('Créer') }}</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</main>

<footer>
    <div class="boxLeft">
        <img class="mini" src="/images/logo_reduit.png" alt="logo my média tech">
    </div>
    <div class="boxCenter">
        <div class="line">
            <p>Réaliser par Rougier Cédrik</p>
        </div>
    </div>
    <div class="boxRigth">
        <div>
            <a href="#">Mentions légales</a>
        </div>
    </div>   
</footer>
{% endblock %}
