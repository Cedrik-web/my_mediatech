{% extends 'base.html.twig' %}

{% block title %}Network index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/stylesHomePage.css">
{% endblock %}

{% block body %}

<header>
    <div class="logo">
        <img class="lG" src="/images/logo.png" alt="logo my média tech">
    </div>
    <div class="navbar">
        <div>
            <p class="accroche">Votre médiathèque privée partout et à partager avec vos amis.</p>
        </div>
        <div class="menu">
            <a class="passive" href="{{ path('app_home') }}" >Home</a>
            <a class="passive" href="{{ path('app_media_index') }}">Mes Médias</a>
            <a class="active" href="{{ path('app_network_index') }}">Mon Réseaux</a>
            <a class="passive" href="#">Contact</a>
        </div>
    </div>
    <div class="connexion">

        {% if app.user %}
        <div class="menu-connexion">
            <div class="line-connexion">
                <div class="cercle"><img src="/images/person.svg" alt="customer"></div>
                <a class="passive" href="{{ path('app_logout') }}">{{ app.user.FirstName }}</a>
            </div>
        </div>    
        {% else %}
        <div class="menu-connexion">
            <div class="line-connexion">
                <div class="cercle"><img src="/images/person.svg" alt="customer"></div>
                <a class="passive" href="{{ path('app_login') }}">Connexion</a>
            </div>
        </div>
        {% endif %}
        
    </div>
</header>
<main>
    <h1>Network index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for network in networks %}
            <tr>
                <td>{{ network.id }}</td>
                <td>{{ network.createdAt ? network.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ network.updatedAt ? network.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_network_show', {'id': network.id}) }}">show</a>
                    <a href="{{ path('app_network_edit', {'id': network.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_network_new') }}">Create new</a>
</main>

<footer>
    <div class="boxLeft">
        <img class="mini" src="/images/logo_reduit.png" alt="logo my média tech">
    </div>
    <div class="boxCenter">
        <div class="line">
            <p>Réaliser par Rougier Cédrik</p>
        </div>
    </div>
    <div class="boxRigth">
        <div>
            <a href="#">Mentions légales</a>
        </div>
    </div>   
</footer>

{% endblock %}
